+    log('Received SIGINT, cleaning up...');
+    await stopServer();
+    process.exit(1);
+});
+
+process.on('SIGTERM', async () => {
+    log('Received SIGTERM, cleaning up...');
+    await stopServer();
+    process.exit(1);
+});
+
+// Run
