+            for char in s:
+                hash_val = ((hash_val << 5) - hash_val) + ord(char)
+                hash_val = hash_val & 0xFFFFFFFF
+            return abs(hash_val)
+        
+        # Same input should produce same hash
+        self.assertEqual(hash_string("test"), hash_string("test"))
